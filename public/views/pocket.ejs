<!doctype html>
<%- include('./partials/head') %>

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-3">My Pocket</h1>
        <hr class="my-2">
        <p>Gif Pocket, will offer the latest gifs from giphy images</p>
        <a href="/search" class="btn btn-sm" >Go to Search</a>
    </div>
</div>


<% if (locals.user) { %>
<div class="container">
    <div class="row">
        <% user.gifs.forEach((gif) => { %>

            <div class="col-md-3">
                <div class="card my-3 gif-card">
                    <img class="card-img-top" width="400" height="200" src="<%= gif.url %>" alt="">
                    <div class="card-body">
                        <p class="card-text">Created At :<%= gif.createdAt %></p>
                    </div>
                </div>
            </div>

        <% }) %>
    </div>
</div>
<% } %>

<%- include('./partials/footer') %>